{
  "name": "borgjs",
  "version": "3.0.0",
  "description": "ðŸ“¦  A tiny wrapper for BorgBackup to automate your backup workflow",
  "main": "dist",
  "engines": {
    "node": ">=6"
  },
  "bin": {
    "borgjs": "bin/index.js"
  },
  "files": [
    "bin",
    "lib",
    "dist"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "bump": "standard-version",
    "test": "tape test/**/*spec.js | tap-spec",
    "lint": "standard",
    "release": "npm run lint  && npm run test && npm run bump && git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vesparny/borgjs.git"
  },
  "keywords": [
    "borg",
    "backup",
    "attic",
    "cron",
    "crontab"
  ],
  "author": "Alessandro Arnodo <alessandro@arnodo.net> (http://alessandro.arnodo.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vesparny/borgjs/issues"
  },
  "homepage": "https://github.com/vesparny/borgjs#readme",
  "dependencies": {
    "chalk": "1.1.3",
    "dateformat": "2.0.0",
    "execa": "0.6.3",
    "filenamify": "2.0.0",
    "meow": "3.7.0",
    "os-tmpdir": "1.0.2",
    "proper-lockfile": "2.0.1",
    "semver": "5.3.0",
    "update-notifier": "2.2.0"
  },
  "devDependencies": {
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "prettier": "^1.1.0",
    "standard": "^10.0.2",
    "standard-version": "4.1.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --semi false --single-quote",
      "standard --fix",
      "git add"
    ]
  }
}
